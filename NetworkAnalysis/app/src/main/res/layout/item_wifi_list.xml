<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemWifiImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/itemWifiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemWifiImageView"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@+id/itemWifiImageView"
        android:text="TextView" />

    <TextView
        android:id="@+id/itemWifiSignalStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/itemWifiTextView"
        android:layout_alignBottom="@+id/itemWifiTextView"
        android:layout_alignParentRight="true"
        android:text="TextView" />

</RelativeLayout>